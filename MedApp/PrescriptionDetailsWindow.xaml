<Window x:Class="MedApp.PrescriptionDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedApp"
        mc:Ignorable="d"
        Title="Детализация" Height="200" Width="400" Icon="/asets/free-icon-medical-record-967173.png" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/asets/tekstura-green.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <GroupBox Header="Кем выдан">
            <StackPanel>
                <TextBlock x:Name="firstNameDoctorTb"/>
                <TextBlock x:Name="secondNameDoctorTb"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Кому выдан" Grid.Row="1">
            <StackPanel>
                <TextBlock x:Name="firstNamePatientTb"/>
                <TextBlock x:Name="secondNamePatientTb"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
